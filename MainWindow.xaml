<Window x:Class="ADMP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADMP"
        xmlns:vlcsw="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
     <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Menu VerticalAlignment="Center">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="TopMenuOpenFile" />
                <MenuItem Header="_Open testfile" Click="TopMenuOpenTestFile" />
                <Separator />
                <MenuItem Header="_Close app"  Click="AppQuit" />
            </MenuItem>
        </Menu>
        
        <Border Padding="2" BorderBrush="#ff8800" Grid.Column="0" Grid.Row="1">
            <vlcsw:VideoView x:Name="MainVideoPlayer">
                <DockPanel LastChildFill="False">
                    <DockPanel x:Name="TopOverlay" LastChildFill="False" DockPanel.Dock="Top">
                        <TextBlock x:Name="TopOverlayFilenameText" Background="Black" Foreground="White" FontWeight="Bold" DockPanel.Dock="Left">filename</TextBlock>
                        <TextBlock x:Name="TopOverlayDurationText" Background="Black" Foreground="White" FontWeight="Bold" DockPanel.Dock="Right">duration</TextBlock>
                    </DockPanel>
                    <Grid x:Name="ProgressBar" DockPanel.Dock="Bottom" Margin="50,0,50,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="8*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0">left</TextBlock>
                        <Slider x:Name="ProgressBarSlider" Grid.Column="1" Grid.Row="0" IsMoveToPointEnabled="True" ValueChanged="ProgressBarSliderValueChanged" Thumb.DragStarted="ProgressBarSliderDragStarted" Thumb.DragCompleted="ProgressBarSliderDragCompleted"></Slider>
                        <TextBlock x:Name="ProgressBarTimer" Grid.Column="2" Grid.Row="0" FontWeight="Bold" FontSize="14" Background="White">right</TextBlock>
                    </Grid>
                </DockPanel>
            </vlcsw:VideoView>
        </Border>
        
        <Border BorderBrush="Blue" BorderThickness="2" Grid.Column="0" Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Button x:Name="PreviousButton" Grid.Column="1" Grid.Row="0">
                    <TextBlock FontSize="20" FontWeight="Bold">PREV</TextBlock>
                </Button>
                <Button x:Name="PlayPauseButton" Click="PlayPause" Grid.Column="2" Grid.Row="0">
                    <TextBlock x:Name="PlayPauseButtonText" FontSize="24" FontWeight="Bold">PLAY</TextBlock>
                </Button>
                <Button x:Name="NextButton" Grid.Column="3" Grid.Row="0">
                    <TextBlock FontSize="20" FontWeight="Bold">NXT</TextBlock>
                </Button>
                <Button x:Name="MuteButton" Click="BottomBarMute" Grid.Column="5" Grid.Row="0">
                    <TextBlock x:Name="MuteButtonTextBlock" FontSize="13" FontWeight="Bold">MUTE</TextBlock>
                </Button>
                <Slider x:Name="VolumeSlider" ValueChanged="BottomBarVolumeChanged" MouseWheel="VolumeSliderMouseWheelHandler" IsMoveToPointEnabled="True" Grid.Column="6" Grid.Row="0" VerticalAlignment="Center"></Slider>
            </Grid>
        </Border>
    </Grid>
</Window>
